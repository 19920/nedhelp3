
<div class="container riders landing">
  <p id="notice"><%= notice %></p>

  <h3 class="text-center text-warning">My own Requests</h3>

  <div class ="row-padding" id="demo">
  <table class="table table-bordered table-hover table-condensed ">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Request Type</th>
          <th>Number ov volunteer</th>
          <th>Action</th>


        </tr>
      </thead>

      <tbody>

            <% @requests.each do |request| %>
              <% if request.user == current_user %>
            <tr>
               <td><%= request.id %></td>
                <td><%= request.title %></td>
                 <td><%= request.request_type %></td>
                  <td><%= request.conversations_count%></td>



                 <td>


                    <div class="btn-group btn-group-sm">

                    <% if request.created_at < DateTime.now - (1.0) ||request.conversations_count == 5 %>
                    <%= link_to 'Republish', edit_request_path(request),class: "btn btn-warning" %>
                     <%= link_to 'destroy', request ,class: "btn btn-danger",method: :delete, data: { confirm: 'are you sure?'} %>
                    <%= link_to 'Details', request, class: "btn btn-info" %>
                    <% else %>
                    <button class="btn-success">Active</button>
                     <%= link_to 'destroy', request ,class: "btn btn-danger",method: :delete, data: { confirm: 'are you sure?'} %>
                    <%= link_to 'Details', request, class: "btn btn-info" %>

                  <% end %>
                 </td>
          </tr>
<% end %>
        <% end %>
      </tbody>
    </table>
  </div>



</div>
